@inject eCommerce.Entities.DTOs.CurrentUserDto CurrentUser

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - eCommerce</title>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/cart.js"></script>
        

        <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

    <body class="lr-everything-centered responsive">
        <input type="hidden" id="cartUrl" data-cart-action-url="@Url.Action("JsCartModalView", "Cart")" />
        <input type="hidden" id="removeProductCartUrl" data-remove-action-url="@Url.Action("JsRemoveProductFromCart", "Cart")" />
        
        <header class="eCommerce-page page-content-wrapper">
            <nav class="fixed-top scrolling-navbar rs-header">
                <div class="rs-navigation search-view">

                    <!-- search box-->
                    <div class="rs-searchbox">
                        <form method="get">
                            <div class="input-wrapper focus empty">
                                <svg class="rs-icon rs-icon-magnifier magnifier-icon">
                                    <use xlink:href="/static/search_icon.png">

                                    </use>
                                </svg>
                                <input placeholder="Search" type="search" autocomplete="off" />
                            </div>
                        </form>
                    </div>

                    <!-- buttons -->
                    <div class="rs-buttons">
                        <ul class="buttons-list">
                            <li class="item-nav">
                                <a class="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="item-nav">
                                <a class="cartBtn"
                                   data-toggle="modal" data-target="#modalCartRight">Cart</a>
                            </li>

                            <li class="item-nav">
                                <a class="" asp-controller="UserAccount" asp-action="Logout">Log out</a>
                            </li>
                        </ul>
                    </div>

                    <div class="rs-user-navigation">
                        <div class="link-list">
                            <!--buton dreapta-->
                            <div class="list-entry">
                                @if (CurrentUser.IsAuthenticated)
                                {
                                    <div class="btn-group float-right align-self-center">
                                        <button type="button" class="btn btn-danger">@CurrentUser.Email</button>
                                        <button type="button" class="btn btn-danger dropdown-toggle px-3" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>

                                        <div class="dropdown-menu dropdown-menu-right">
                                            @if (CurrentUser.IsAdmin)
                                            {
                                                <a class="dropdown-item" asp-controller="Admin" asp-action="AdminActionPick">Admin Actions</a>
                                            }
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" asp-controller="UserAccount" asp-action="Logout">Log out</a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <ul class="btn-group">
                                        <li class="pl-2 mb-2 mb-md-0">
                                            <a asp-controller="UserAccount" asp-action="Login" type="button"
                                               class="btn btn-outline-primary btn-md btn-rounded btn-navbar">Sign in</a>
                                        </li>

                                        <li class="pl-2 mb-2 mb-md-0">
                                            <a asp-controller="UserAccount" asp-action="Register" type="button"
                                               class="btn btn-outline-info btn-md btn-rounded btn-navbar">Sign up</a>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- subcategories -->
                <div class="categories">
                    <div class="rs-spandex">
                        <ul class="list">
                            <div class="rail" style="transform: translate(0px, 0px);">
                                <li class="item">
                                    <a>Chit/Bas</a>
                                </li>

                                <li class="item">
                                    <a>Tobe</a>
                                </li>

                                <li class="item">
                                    <a>Clav</a>
                                </li>

                                <li class="item">
                                    <a>Studio</a>
                                </li>

                                <li class="item">
                                    <a>Alamuri</a>
                                </li>

                                <li class="item">
                                    <a>PA</a>
                                </li>

                            </div>
                        </ul>
                    </div>

                </div>
                
            </nav>
        </header>
    
    
        <div class="eCommerce-page page-content-wrapper" >
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

   
        <!--Modal Cart-->
        <div class="modal fade" id="modalCartRight" tabindex="-1" role="dialog" aria-labelledby="modalCart" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title w-100" id="modalCart">Your shopping list</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body insertModalBody">
                        
                    </div>

                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                        <a asp-controller="Cart" asp-action="Index" 
                                class="btn btn-primary">Finish order</a>
                    </div>
                </div>
            </div>
        </div>
        

        @RenderSection("Scripts", required: false)
    </body>
</html>
