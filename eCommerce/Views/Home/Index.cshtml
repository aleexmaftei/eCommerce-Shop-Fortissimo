@model eCommerce.Models.ProductVM.ProductCategoryVM

<link rel="stylesheet" href="~/css/index.css" />

<!-- products category -->
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12">
                <h3 class="mt-5 mb-3 d-flex justify-content-center" style="font-weight:300;">Welcome to Fortissimo!</h3>
            </div>
            <div class="col-12">
                <p class="d-flex justify-content-center" style="font-weight:300;margin-bottom:0px;">
                    "Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
                </p>
                <p class="d-flex justify-content-center" style="font-weight:300;">
                    "There is no one who loves pain itself, who seeks after it and wants to have it, simply because it is pain..."
                </p>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="pt-4">
            <h4 style="font-weight:300;">Categories</h4>
            <hr style="margin-top:1px;"/>
        </div>
    </div>

    <div class="col-12 mb-2">

        <div class="container d-flex justify-content-center">
            <div class="row w-100">
                @foreach (var productCategory in Model.ProductCategories)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-3 d-flex justify-content-center mb-4 mt-2">
                        <a class="category w-100"
                           asp-action="Category" asp-route-id="@productCategory.ProductCategoryId">
                            <div class="d-flex justify-content-center img-thumbnail w-100">
                                <div class="w-50">
                                    <img style="height:100px;width:auto;" class="img-fluid" alt="" src="@productCategory.ProductCategoryImage" />
                                </div>
                                <div class="align-self-center w-50">
                                    <div class="font-weight-normal">
                                        @productCategory.ProductCategoryName
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="pt-4">
            <h4 style="font-weight:300;">Manufacturers</h4>
            <hr style="margin-top:1px;"/>
        </div>
    </div>

    <div class="col-12 mb-2">
        <div class="container d-flex justify-content-center">
            <div class="row w-100">
                @foreach (var manufacturer in Model.Manufacturers)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-3 d-flex justify-content-center mb-4 mt-2">
                        <a class="category w-100"
                           asp-action="" asp-route-id="">
                            <div class="d-flex justify-content-center img-thumbnail">
                                <div>
                                    <img style="height:50px;width:auto;" class="img-fluid" alt="" src="@manufacturer.ManufacturerLogo" />
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>