@model eCommerce.Models.MyProfileVM.DeliveryLocation.AddDeliveryLocationVM
@inject eCommerce.Entities.DTOs.CurrentUserDto CurrentUser

<link rel="stylesheet" href="~/css/myProfile.css" />

<!-- Side Bar -->
<div class="container pb-5">
    <h2 class="d-flex justify-content-center pt-4">
        Add new delivery adress
    </h2>

    <div class="row pt-4">
        <div class="col-3 menu-container">
            <div class="user-account-sidebar pad-hrz-sm pad-sep-xs">
                <ul class="user-account-menu list-unstyled m-0 p-0">
                    @if (CurrentUser.IsAdmin == true)
                    {
                        <li>
                            <a asp-controller="MyProfile" asp-action="Index">My user profile</a>
                        </li>

                        <li>
                            <a asp-controller="Admin" asp-action="AdminProfile">My admin profile</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="MyProfile" asp-action="Index">My profile</a>
                        </li>
                    }

                    <li>
                        <a asp-controller="MyProfile" asp-action="Invoices">
                            View Invoices
                        </a>
                    </li>

                    <li>
                        <a asp-controller="UserAccount" asp-action="ChangePassword">
                            Change password
                        </a>
                    </li>

                    <li>
                        <a asp-controller="MyProfile" asp-action="ViewDeliveryLocations">
                            Update delivery locations
                        </a>
                    </li>

                    <li class="is-active">
                        <a asp-controller="MyProfile" asp-action="InsertDeliveryLocation">
                            Add new delivery adress
                        </a>
                    </li>

                    <li>
                        <form method="post">
                            <a type="submit" style="color:orangered;"
                               asp-controller="UserAccount" asp-action="DeleteMyAccount">
                                Delete my account
                            </a>
                        </form>
                    </li>

                </ul>
            </div>
        </div>

        <!-- Add Delivery Location -->
        <div class="col-9">
            <div class="user-dashboard-slot">
                <div class="panel panel-default user-account-panel min-height-panel">
                    <div class="panel-body">
                        <form asp-controller="MyProfile" asp-action="InsertDeliveryLocation">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="CountryName" class="control-label"></label>
                                        <input asp-for="CountryName" class="form-control" />
                                        <span asp-validation-for="CountryName" text-danger" />
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="RegionName" class="control-label"></label>
                                        <input asp-for="RegionName" class="form-control" />
                                        <span asp-validation-for="RegionName" text-danger" />
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="CityName" class="control-label"></label>
                                        <input asp-for="CityName" class="form-control" />
                                        <span asp-validation-for="CityName" class="text-danger" />
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-8 side-by-side form-group" style="padding-right:15px;">
                                            <div class="form-group">
                                                <label asp-for="AddressDetail" class="control-label"></label>
                                                <input asp-for="AddressDetail" class="form-control" />
                                                <span asp-validation-for="AddressDetail" class="text-danger" />
                                            </div>
                                        </div>

                                        <div class="col-4 side-by-side form-group">
                                            <label asp-for="PostalCode" class="control-label"></label>
                                            <input asp-for="PostalCode" class="form-control" />
                                            <span asp-validation-for="PostalCode" class="text-danger" />
                                        </div>
                                    </div>
                                    <hr />
                                </div>

                                <div class="form-group col-12 d-flex justify-content-center">
                                    <input type="submit" value="Add Delivery Location" class="btn btn-primary" />
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
